import { useState } from 'react';

const SubmitButton = ({ onClick, disabled = false }) => {
  const [isHovering, setIsHovering] = useState(false);
  
  const handleMouseEnter = (event) => {
    setIsHovering(true);
    console.log('Mouse Entering');
  };
  
  const handleMouseLeave = (event) => {
    setIsHovering(false);
    console.log('Mouse Exiting');
  };
  
  const handleClick = (event) => {
    console.log('Submit button clicked - Security check initiated');
    if (onClick && !disabled) {
      onClick(event);
    }
  };

  return (
    <div className={`submit-button-wrapper ${isHovering ? 'hovering' : ''}`}>
      <button
        type="button"
        className={`submit-button ${disabled ? 'disabled' : ''}`}
        onMouseEnter={handleMouseEnter}
        onMouseLeave={handleMouseLeave}
        onClick={handleClick}
        disabled={disabled}
        aria-label="Submit password for security verification"
        data-testid="submit-button"
      >
        Submit Password
      </button>
      <div className="button-status" data-testid="button-status">
        {isHovering ? 'Mouse detected - Tracking movements' : 'Hover to activate tracking'}
      </div>
    </div>
  );
};

export default SubmitButton;
